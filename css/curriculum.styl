.curriculum-streams
  margin 0
  padding 0

  list-style-type none

  @media mw32
    margin-bottom 1.4em

  @media mw38
    margin-bottom 2em
    margin-top 2em

.curriculum-streams__item
  display inline-block
  margin-bottom 1.4em
  width 48%

  @media mw19
    margin-left 1%
    margin-right 1%
    width 44%

  @media mw25
    margin-left 3%
    margin-right 3%
    width 40%

  @media mw32
    margin-left 0
    margin-right 0
    width 30%

  @media mw38
    margin-left 2%
    margin-right 2%
    width 26%

  @media mw44
    margin-left 3%
    margin-right 3%
    width 24%

  @media mw44
    margin-left 5%
    margin-right 5%
    width 20%

.curriculum-streams__title
  margin 0

  font-size 0.875rem
  font-weight normal

.curriculum-streams__icon
  display block
  padding-bottom 100%
  width 100%

  background transparent none no-repeat center center
  background-size 90% 90%

